{
  "name": "biketracker",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": "16.14.2"
  },
  "scripts": {
    "dev": "cross-env ENVIRONMENT=development ts-node --files  src/server.ts --ignore __tests__ ",
    "start": "node build/src/server.js",
    "test": "jest --detectOpenHandles",
    "pretest": "cross-env ENVIRONMENT=test jest",
    "postinstall": "tsc && copyfiles src/views/*.ejs src/views/assets/*.css src/views/*.jpg build/ ",
    "copy-files": "src/views/*.ejs src/views/assets/*.css src/views/*.jpg build/",
    "watch-node": "nodemon build/src/server.js",
    "watch-ts": "tsc -w && copy-files",
    "prod":"pm2 build/src/server.js"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/cron": "^1.7.3",
    "@types/ejs": "^3.1.0",
    "@types/express": "^4.17.13",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.3",
    "@types/nodemailer": "^6.4.4",
    "await-to-js": "^3.0.0",
    "bcrypt": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "cron": "^1.8.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "factory-girl": "^5.0.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.16",
    "morgan": "^1.10.0",
    "nodemailer": "^6.5.0",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "validator": "^13.1.1"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^8.5.8",
    "jest": "^27.0.3"
  }
}
